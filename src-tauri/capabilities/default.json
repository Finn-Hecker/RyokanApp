{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "sql:allow-load",
      "allow": [{
        "name": "sqlite:ryokan.db",
        "request": true
      }]
    },
    {
      "identifier": "sql:allow-execute",
      "allow": [{
        "name": "sqlite:ryokan.db",
        "request": true
      }]
    },
    {
      "identifier": "sql:allow-select",
      "allow": [{
        "name": "sqlite:ryokan.db",
        "request": true
      }]
    }
  ]
}